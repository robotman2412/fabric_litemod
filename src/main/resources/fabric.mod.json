  "authors": [
    "RobotMan2412"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/RobotMan2412/fabric-litemod"
  },

  "license": "CC0-1.0",
  "icon": "assets/robot_litemod/icon.png",

